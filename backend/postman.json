{
  "info": {
    "name": "Voice Biometric Recognition API",
    "description": "Complete API testing for Voice Biometric Recognition & Synthetic Voice Detection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Login - Get JWT Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('auth_token', response.access_token);",
                  "    pm.test('Login successful', function () {",
                  "        pm.expect(response.access_token).to.be.a('string');",
                  "    });",
                  "} else {",
                  "    pm.test('Login failed', function () {",
                  "        pm.expect.fail('Login should succeed');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"officer\",\n  \"password\": \"police123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. Inmate Management",
      "item": [
        {
          "name": "Create Inmate - John Doe",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('inmate_id', response.id);",
                  "    pm.test('Inmate created successfully', function () {",
                  "        pm.expect(response.inmate_code).to.eql('INM001');",
                  "        pm.expect(response.name).to.eql('John Doe');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "name",
                  "value": "John Doe",
                  "type": "text"
                },
                {
                  "key": "inmate_code",
                  "value": "INM001",
                  "type": "text"
                },
                {
                  "key": "reference_audio",
                  "type": "file",
                  "src": "john_reference.wav",
                  "description": "Upload a WAV file here"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/inmates",
              "host": ["{{base_url}}"],
              "path": ["inmates"]
            }
          },
          "response": []
        },
        {
          "name": "Create Inmate - Jane Smith",
          "request": {
            "method": "POST",
            "header": [
              {
