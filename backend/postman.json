    {
      "name": "3. Audio Analysis",
      "item": [
        {
          "name": "Upload Audio - Voice Match Test",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('report_id', response.report_id);",
                  "    pm.collectionVariables.set('report_code', response.report_code);",
                  "    pm.test('Audio analysis completed', function () {",
                  "        pm.expect(response.report_code).to.include('DFA-');",
                  "        pm.expect(response.synthetic_confidence).to.be.a('number');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "audio",
                  "type": "file",
                  "src": "test_call.wav",
                  "description": "Audio file to analyze"
                },
                {
                  "key": "inmate_code",
                  "value": "INM001",
                  "type": "text",
                  "description": "Compare against specific inmate"
